import React, { useState, useRef, useEffect } from 'react';
import { Volume2, VolumeX, Instagram } from 'lucide-react'; // Imported Instagram icon

// Updated Mock Data: Added 'username' and changed 'name' to 'title' for clarity
const MOCK_VIDEOS = [
  { id: 1, title: "Fitness Motivation", username: "@alex_lifts", url: "https://youtube.com/shorts/jXG-NA2GKNo?si=OLjt7Ux8c4Vtqzet", profileUrl: "https://www.instagram.com/alex_lifts" },
  { id: 2, title: "Healthy Meal Prep", username: "@maya_eats", url: "https://storage.googleapis.com/gtv-videos-bucket/sample/ElephantsDream.mp4", profileUrl: "https://www.instagram.com/maya_eats" },
  { id: 3, title: "Workout Challenge", username: "@sam_endurance", url: "https://storage.googleapis.com/gtv-videos-bucket/sample/ForBiggerJoyrides.mp4", profileUrl: "https://www.instagram.com/sam_endurance" },
  { id: 4, title: "Morning Yoga Flow", username: "@chloe_zen", url: "https://storage.googleapis.com/gtv-videos-bucket/sample/ForBiggerFun.mp4", profileUrl: "https://www.instagram.com/chloe_zen" },
];

// Helper component for managing a single video element
const VideoCard = ({ video, isActive, onToggleSound, videoRefs, isPlaying }) => {
  const videoRef = useRef(null);

  // Store the ref in the parent component's centralized ref object
  useEffect(() => {
    if (videoRef.current) {
      videoRefs.current[video.id] = videoRef.current;
      videoRef.current.muted = !isActive; // Control initial mute state
      videoRef.current.loop = true; // Ensure continuous play
      videoRef.current.playsInline = true;
      videoRef.current.play().catch(e => console.log("Auto-play blocked:", e)); // Attempt to auto-play
    }
  }, [video.id, isActive, videoRefs]);

  // Handle play/pause sync when the global state changes
  useEffect(() => {
    if (videoRef.current) {
      if (isPlaying) {
        videoRef.current.play().catch(e => console.log("Play failed:", e));
      } else {
        videoRef.current.pause();
      }
    }
  }, [isPlaying]);

  return (
    <div 
      // ðŸŽ¯ Apply vertical aspect ratio for reels (9:16)
      className="relative w-full aspect-[9/16] bg-black rounded-xl overflow-hidden shadow-2xl group cursor-pointer"
    >
      <video
        ref={videoRef}
        src={video.url}
        className="w-full h-full object-cover transition-transform duration-300 group-hover:scale-[1.03]"
        muted={!isActive} // Controlled by the component's active state
        // Add default poster/fallback for loading state if needed
        poster={`https://placehold.co/400x600/355425/FFFFFF?text=${video.username}`} // Use username on poster
      />

      {/* Overlay controls and label */}
      <div className="absolute inset-0 bg-gradient-to-t from-black/70 via-black/20 to-transparent p-4 flex flex-col justify-end">
        
        {/* Instagram Profile Link & Username */}
        <a 
          href={video.profileUrl} 
          target="_blank" 
          rel="noopener noreferrer"
          className="text-white text-sm font-semibold mb-1 flex items-center gap-1 hover:text-blue-400 transition"
          onClick={(e) => e.stopPropagation()} // Prevent accidental sound toggle when clicking the link
        >
          <Instagram size={14} />
          {video.username}
        </a>

        {/* Video Title */}
        <h3 className={`text-white font-bold transition-all duration-300 ${isActive ? 'text-xl text-yellow-300' : 'text-lg'}`}>
          {video.title}
        </h3>

        {/* Mute/Unmute Button */}
        <button
          onClick={() => onToggleSound(video.id)}
          className={`mt-2 p-3 rounded-full transition-colors duration-300 shadow-xl self-start ${
            isActive ? 'bg-yellow-500 hover:bg-yellow-600' : 'bg-gray-700 hover:bg-gray-600'
          }`}
          aria-label={isActive ? `Mute ${video.title}` : `Unmute ${video.title}`}
        >
          {isActive ? <Volume2 className="w-5 h-5 text-black" /> : <VolumeX className="w-5 h-5 text-white" />}
        </button>
      </div>
    </div>
  );
};

// Main Component
export default function InfluencerVideoSync() {
  // State for tracking which video (by ID) currently has sound
  const [activeVideoId, setActiveVideoId] = useState(MOCK_VIDEOS[0].id);
  // State to control play/pause across all videos
  const [isPlaying, setIsPlaying] = useState(false);
  // Ref to hold all individual video DOM elements for synchronization
  const videoRefs = useRef({});

  // Function to synchronize play/pause across all videos based on global state
  const syncPlayback = (play) => {
    Object.values(videoRefs.current).forEach(video => {
      if (video) {
        if (play) {
          video.play().catch(e => console.log("Playback failed for sync:", e));
        } else {
          video.pause();
        }
      }
    });
  };

  // Effect to manage initial/global playback state
  useEffect(() => {
    // Attempt to start playing all videos on mount
    setIsPlaying(true);
  }, []);

  // Effect to re-sync playback when isPlaying state changes
  useEffect(() => {
    syncPlayback(isPlaying);
  }, [isPlaying]);

  // Handle click on any sound button
  const handleToggleSound = (id) => {
    setActiveVideoId(prevId => prevId === id ? null : id);
  };

  // Toggle global playback (Play/Pause All)
  const toggleGlobalPlayback = () => {
    setIsPlaying(prev => !prev);
  };
  
  return (
    <div className="min-h-screen bg-gray-100 p-8 font-sans">
      <header className="max-w-6xl mx-auto text-center mb-10">
        <h1 className="text-4xl font-extrabold text-gray-900 mb-2">
          Sync Player: Influencer Reels
        </h1>
        <p className="text-gray-600 max-w-2xl mx-auto">
          All vertical videos play simultaneously. Click the volume icon on any card to hear the influencer's audio.
        </p>
      </header>

      {/* Global Play/Pause Control */}
      <div className="text-center mb-6">
        <button
          onClick={toggleGlobalPlayback}
          className="bg-gray-800 text-white px-6 py-3 rounded-full text-lg shadow-lg hover:bg-gray-700 transition duration-300"
        >
          {isPlaying ? 'Pause All' : 'Play All'}
        </button>
      </div>

      {/* Video Grid */}
      <div className="max-w-7xl mx-auto grid grid-cols-2 sm:grid-cols-2 lg:grid-cols-4 gap-6">
        {MOCK_VIDEOS.map((video) => (
          <VideoCard
            key={video.id}
            video={video}
            isActive={video.id === activeVideoId}
            onToggleSound={handleToggleSound}
            videoRefs={videoRefs}
            isPlaying={isPlaying}
          />
        ))}
      </div>
    </div>
  );
}